
<title>Blog Wellcome</title>
<link rel="stylesheet" type="text/css" href="/style.css">

<h1>Wellcome </h1>
<ul>
    <% blogPosts.forEach(function(post) { %>
        <li>
            <div class="blog-post">
                <h2><%= post.title %></h2>
                <p><%= post.content.substring(0, 100) %></p>
                <a href="/post/<%= post.id %>">Read more</a>
            </div>
        </li>
    <% }); %>
</ul>
<a href="/add-post">New Post</a>